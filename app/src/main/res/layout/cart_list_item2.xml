<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/MyCardView">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/padding_large"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cart_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Ankara waist coat"/>

            <TextView
                android:id="@+id/cart_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Dim"
                android:layout_marginTop="@dimen/padding_inline"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Size 10"/>

            <TextView
                android:id="@+id/cart_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance"
                android:layout_marginTop="@dimen/padding_default"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="N2000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_large"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cart_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/padding_inline"
                android:src="@drawable/ic_delete_black_24dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cart_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_inline"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"/>

                <TextView
                    android:id="@+id/cart_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="1"/>

                <ImageView
                    android:id="@+id/cart_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_inline"
                    android:src="@drawable/ic_keyboard_arrow_up_black_24dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>