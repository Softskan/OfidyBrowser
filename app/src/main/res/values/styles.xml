<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryCheck">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Settings themes -->
    <style name="Theme.SettingsTheme" parent="Theme.LightTheme">
        <item name="android:windowBackground">@null</item>
        <item name="toolbarSettingsBackground">@drawable/toolbar_elevate</item>
    </style>

    <style name="Theme.SettingsTheme.Dark" parent="Theme.DarkTheme">
        <item name="android:windowBackground">@null</item>
        <item name="toolbarSettingsBackground">@drawable/toolbar_elevate_dark</item>

        <!-- Dark settings has a special primary dark -->
        <item name="colorPrimaryDark">@color/secondary_color_settings_dark</item>
    </style>

    <style name="Theme.SettingsTheme.Black" parent="Theme.BlackTheme">
        <item name="android:windowBackground">@null</item>
        <item name="toolbarSettingsBackground">@drawable/toolbar_elevate_black</item>
    </style>

    <!-- Regular themes -->
    <style name="Theme.LightTheme" parent="Theme.BaseLightTheme">
        <item name="searchBackground">@drawable/card_bg_elevate</item>
        <item name="listBackground">@drawable/list_bg</item>
        <item name="progressBackgroundColor">@color/secondary_color</item>
    </style>

    <style name="Theme.DarkTheme" parent="Theme.BaseDarkTheme">
        <item name="searchBackground">@drawable/card_bg_elevate</item>
        <item name="listBackground">@drawable/list_bg</item>
        <item name="progressBackgroundColor">@color/secondary_color</item>
    </style>

    <style name="Theme.BlackTheme" parent="Theme.BaseBlackTheme">
        <item name="searchBackground">@drawable/card_bg_elevate</item>
        <item name="listBackground">@drawable/list_bg</item>
        <item name="progressBackgroundColor">@color/black</item>
    </style>

    <!-- Base Themes -->
    <style name="Theme.BaseLightTheme" parent="Theme.AppCompat.Light">

        <!-- Theme Colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/secondary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="drawerBackground">@color/drawer_background</item>
        <item name="dividerColor">@color/divider_light</item>

        <item name="selectedBackground">@color/selected_light</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Overflow menu -->
        <item name="actionOverflowButtonStyle">@style/overFlowButtonStyle</item>

        <!-- Alert dialogs -->
        <item name="alertDialogTheme">@style/AppCompatDialogStyle.Light</item>

    </style>

    <style name="Theme.BaseDarkTheme" parent="Theme.AppCompat">

        <!-- Theme colors -->
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorPrimaryDark">@color/secondary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="drawerBackground">@color/drawer_background_dark</item>
        <item name="dividerColor">@color/divider_dark</item>

        <item name="selectedBackground">@color/selected_dark</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Overflow menu -->
        <item name="actionOverflowButtonStyle">@style/overFlowButtonStyle</item>

        <!-- Alert dialogs -->
        <item name="alertDialogTheme">@style/AppCompatDialogStyle.Dark</item>
    </style>

    <style name="Theme.BaseBlackTheme" parent="Theme.AppCompat">

        <!-- Theme Colors -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="drawerBackground">@color/black</item>
        <item name="dividerColor">@color/black</item>

        <item name="selectedBackground">@color/selected_dark</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Overflow menu -->
        <item name="actionOverflowButtonStyle">@style/overFlowButtonStyle</item>

        <!-- Alert dialogs -->
        <item name="alertDialogTheme">@style/AppCompatDialogStyle.Black</item>
    </style>

    <!-- AlertDialog Theming -->
    <style name="AppCompatDialogStyle.Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="AppCompatDialogStyle.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="AppCompatDialogStyle.Black" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <!-- Overflow Menu Customization -->
    <style name="overFlowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:minWidth">48dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Text Customization -->
    <style name="boldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normalText">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_xmedium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="TextAppearance.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Dim">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Inverse">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="TextAppearance.XSmall">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>

    <style name="TextAppearance.XSmall.Inverse">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.XSmall.Dim">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.XSmall.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextAppearance.Small.Inverse">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Small.Dim">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Small.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Small.Dim.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.XMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_xmedium</item>
    </style>

    <style name="TextAppearance.Medium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.Medium.Dim">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Medium.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Medium.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Medium.Light.Inverse">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Medium.Inverse">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.XMedium.Inverse">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Medium.Light.Dim">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Large.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Large.Label.Inverse">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Large.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="MyCardView" parent="@style/CardView.Light">
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@anim/lift_up</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="customSpinnerTheme" parent="AppTheme">
        <item name="colorControlNormal">#eaeaea</item>
        <item name="colorControlActivated">#000000</item>
        <item name="colorControlHighlight">#000000</item>
    </style>

</resources>
